function get_floor(value) {
  $.ajax({
    type: "POST",
    url: '/daily_problems/get_floors/' + value,
    data: 'text',
    success: function (data) {
      $("#floor").html(data);
    }
  }
  )
}

function get_machine(branch, floor) {
  $.ajax({
    type: "POST",
    url: '/daily_problems/get_machines/' + branch +'/'+ floor,
    data: 'text',
    success: function (data) {
      $("#daily_problem_machine_id").html(data);
    }
  }
  )
}
