<h1>Daily Problems</h1>

<table border="1" cellpadding="1" cellspacing="1" height="100%" width="100%">
  <thead>
    <tr>
      <th>Date</th>
      <th>Machine</th>
      <th>User</th>
      <th>Problem detail</th>
      <th>Situation</th>
      <th>Maintainer</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= @daily_problem.date %></td>
        <td><%= @daily_problem.machine_id %></td>
        <td><%= @daily_problem.user_id %></td>
        <td><%= @daily_problem.problem_detail %></td>
        <td><%= @daily_problem.situation %></td>
        <td><%= @daily_problem.maintainer_id %></td>
        <td><%= @daily_problem.comment %></td>
      </tr>
  </tbody>
</table>